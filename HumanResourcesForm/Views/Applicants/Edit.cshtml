@model HumanResourcesForm.Models.Applicant

@{
    ViewData["Title"] = "Edit Applicant";
}

<h1>Edit</h1>

<h2>Edit Applicant</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="NameSurname"></label>
        <input asp-for="NameSurname" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="IdentityNumber"></label>
        <input asp-for="IdentityNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CvUrl"></label>
        <input asp-for="CvUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

